<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: #1c1c1c;"
      fx:controller="UserInterface.VisualizerController">

    <Pane fx:id="visualizerPane" minHeight="500" prefWidth="100" prefHeight="500" style="-fx-background-color: #32a852;">
    </Pane>

    <ComboBox fx:id="dropdown"/>
    <Label fx:id="statusText"/>
    <Button text="Generate Random Array" onAction="#GenerateRandomArray"/>
    <HBox alignment="CENTER" spacing="20.0">
        <Button text="Step Forward" onAction="#StepForward"/>
        <Button text="Animate on timer" onAction="#AnimateOnTimer"/>
        <Button text="Stop Anim" onAction="#StopTimer"/>
    </HBox>
</VBox>
